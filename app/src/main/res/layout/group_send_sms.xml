<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center">
    <EditText
        android:id="@+id/groupSendSms_addrs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="短信收件人列表"/>
    <EditText
        android:id="@+id/groupSendSms_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="短信内容"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send group sms"
        android:id="@+id/groupSendSms_send"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select contacts"
        android:id="@+id/groupSendSms_select"
        />
</LinearLayout>
