<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
<EditText 
	android:id="@+id/dict_main_word"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
    android:hint="要插入的单词"/>
<EditText  
	android:id="@+id/dict_main_detail"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content" 
	android:lines="3"
    android:hint="要插入的单词的解释"/>
<Button  
	android:id="@+id/dict_main_insert"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="insert"
    android:layout_gravity="center_horizontal"/>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
		<EditText
			android:id="@+id/dict_main_key"
			android:layout_width="250dp"
			android:layout_height="wrap_content"
            android:hint="请输入要查询的单词或解释"/>
		<Button
			android:id="@+id/dict_main_search"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="search"
			/>
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<EditText
			android:id="@+id/dict_main_id"
			android:layout_width="250dp"
			android:layout_height="wrap_content"
            android:hint="请输入要delete的单词的id"/>
		<Button
			android:id="@+id/dict_main_delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="delete"
			/>
	</LinearLayout>

</LinearLayout>
