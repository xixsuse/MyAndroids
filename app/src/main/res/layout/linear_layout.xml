<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/linearLayoutHorizontalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="横向排列"/>

        <Button
            android:id="@+id/linearLayoutVerticalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纵向排列"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutOrientation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/linearLayoutButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button1"/>

        <Button
            android:id="@+id/linearLayoutButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button2"/>

        <Button
            android:id="@+id/linearLayoutButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button3"/>
    </LinearLayout>

</LinearLayout>
