<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
        android:id="@+id/relative_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leaf"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/relative_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leaf"
        android:layout_alignTop="@+id/relative_text1"
        android:layout_toLeftOf="@+id/relative_text1"/>
    <TextView
        android:id="@+id/relative_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leaf"
        android:layout_toRightOf="@+id/relative_text1"
        android:layout_alignTop="@+id/relative_text1"/>
    <TextView
        android:id="@+id/relative_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leaf"
        android:layout_above="@+id/relative_text1"
        android:layout_alignLeft="@+id/relative_text1"/>
    <TextView
        android:id="@+id/relative_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leaf"
        android:layout_alignLeft="@+id/relative_text1"
        android:layout_below="@+id/relative_text1"/>
</RelativeLayout>
